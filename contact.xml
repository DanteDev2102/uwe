<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="contact_landing_page" name="contact_landing_page">

        <head>
            <link href="https://fonts.cdnfonts.com/css/century-gothic-paneuropean" rel="stylesheet" />
        </head>

        <style>
            :root {
                --blue-bg: #0074ba;
                --blue-font: #003293;
                --white-pure: #ffffff;
            }

            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }

            h1 {
                height: 100%;
                display: flex;
                align-items: center;
                margin-left: 5rem;
            }

            body {
                font-family: 'Century Gothic Paneuropean', sans-serif;
                background-color: var(--white-pure);
                
            }

            nav {
                height: 17vh;
                background-color: var(--blue-bg);
                color: var(--white-pure);
                display: flex;
                justify-content: space-between;
                padding: 1rem;
                font-size: 2rem;
                font-weigth: bold;
            }

            nav div {
                display: flex;
                justify-content: space-between;
                padding: 1rem;  
            }
            
            .container-contact {
                width: 100%;
                height: 100vh;
                margin-bottom: 2rem;
            }

            .bg-img-trans {
                background-image: url('/inpacol_landing_page/static/public/5.jpg');
                background-size: cover;
                background-repeat: no-repeat;
                background-position: center;
                opacity: 0.17;
                height: 100%;
                width: 100%;
            }

            figure {
                width: 10%;
                margin-left: 5rem;
            }

            figure img {
                width: 100%;
                height: 100%;
            }

            .container-data {
                position: absolute;
                top: 30%;
                width: 100%;
                height: 100%;
                display: flex;
                flex-direction: column;
                justify-content: start;
                align-items: start;
                gap: 4rem;
            }

            .container-data:last-child {
                gap: 6rem;
            }

            .container-data div {
                display: flex;
                padding: 0;
                justify-content: start;
                align-items: center;
                margin-left: 5rem;
                height: 10%;
                width: 80%;
            }

            h2 {
                color: var(--blue-font);
                font-size: 4rem;
                margin-left: 2rem;
            }

            .logo {
                width: 16em;
                height: 10em;
                position: relative;
                top: -1em;
                z-index: 100;
            }

            .container-video {
                width: max-content;
                display: grid;
            }

            .play-button {
                background-color: transparent;
                border: none;
                margin: 3%;
                position: absolute;
            }

            .play-button span {
                font-size: 10em;
                color: var(--white-pure);
            }

            .container-video video {
                border: 5px solid var(--white-pure);
                border-radius: 3%;
                width: 20em;
            }
        </style>

        <nav>
            <h1>
                CONT√ÅCTANOS
            </h1>

            <img class="logo" src="/inpacol_landing_page/static/public/logo.png" />
        </nav>

        <div class="container-contact">
            <div class="bg-img-trans">
            </div>

            <div class="container-data">
                <div>
                    <figure>
                        <img src="/inpacol_landing_page/static/public/viber.png"/>
                    </figure>

                    <h2>0251 000 0000</h2>
                </div>

                <div>
                    <figure>
                        <img src="/inpacol_landing_page/static/public/sobre-de-correo-electronico.png"/>
                    </figure>

                    <h2>alimentoslamilagrosa@gmail.com</h2>
                </div>

                <div>
                    <figure>
                        <img src="/inpacol_landing_page/static/public/instagram.png"/>
                    </figure>

                    <h2>@alimentoslamilagrosa</h2>
                </div>

                <div>
                    <figure>
                        <img src="/inpacol_landing_page/static/public/pasador-de-ubicacion.png"/>
                    </figure>

                    <h2>Zona Industrial I, Barquisimeto Edo. Lara</h2>
                </div>
            </div>
        </div>

        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d17374.392356639233!2d-69.35241835024668!3d10.077747982459494!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8e876700099c2427%3A0x2e21684a73be0b74!2sInpacol!5e0!3m2!1ses!2sve!4v1736965978320!5m2!1ses!2sve" style="border:0; width: 100%; height: 60%; margin-bottom: 4%" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>

    </template>

</odoo>
